{
     "tabWidth": 5,
     "printWidth": 110,
     "useTabs": false,
     "semi": true,
     "singleQuote": true,
     "quoteProps": "as-needed",
     "trailingComma": "es5",
     "bracketSpacing": true,
     "arrowParens": "always",
     "endOfLine": "auto",
     "bracketSameLine": false,
     "overrides": [
          {
               "files": "*.component.html",
               "options": {
                    "parser": "angular"
               }
          },
          {
               "files": "*.html",
               "options": {
                    "parser": "html",
                    "tabWidth": 4,
                    "printWidth": 140,
                    "bracketSameLine": false
               }
          }
     ]
}
